
@{
    ViewBag.Title = "signup";
}


<style>
    body {
        background-image: url(https://i.ibb.co/5FVK9fm/undraw-add-friends-re-3xte.png);
        background-size: cover;
        background-position: right 5% bottom 750%;
        background-size: 40%;
        background-repeat: no-repeat;
    }
    .button1 {
        background-color: white;
        color: black;
        border: 2px solid #555555;
    }

        .button1:hover {
            background-color: #555555;
            color: white;
        }


    .buttons{
        padding-left:70px;
    }


</style>

<div class="Register" style="padding-left:400px;padding-top:40px;">
    <h2 style="padding-left: 30px;">@ViewBag.Message</h2>
    <p> </p>
    <div class="Register-form">
        <form action="@Url.Action("Index","Home")">
            <table style="padding-left:100px;">
                <tr>
                    <td><label>User ID </label></td>
                    <td>
                        <input type="text" class="userId" required="" />
                    </td>
                </tr>
                <tr><td><p></p></td><td><p></p></td></tr>
                <tr>
                    <td><label>First Name </label></td>
                    <td>
                        <input type="text" class="FirstName" required="" />
                    </td>
                </tr>
                <tr><td><p></p></td><td><p></p></td></tr>
                <tr>
                    <td><label>Last Name</label></td>
                    <td>
                        <input type="text" class="LastName" required="" />
                    </td>
                </tr>
                <tr><td><p></p></td><td><p></p></td></tr>
                <tr>
                    <td><label>DOB</label></td>
                    <td>
                        <input type="date" class="DOB" required="" />
                    </td>
                </tr>
                <tr><td><p></p></td><td><p></p></td></tr>
                <tr>
                    <td><label>Email ID</label></td>
                    <td>
                        <input type="email" class="Email" required="" />
                    </td>
                </tr>
                <tr><td><p></p></td><td><p></p></td></tr>
                <tr>
                    <td><label>Password</label></td>
                    <td>
                        <input type="password" class="password" required="" />
                        <input type="submit" />
                    </td>
                </tr>


            </table>
        </form>
    </div>
    <p>

    </p>
    <div class="buttons">
        <input class="button1" type="submit" value="Register" />
        <button class="button1" type="button" onclick="location.href='@Url.Action("Index","Home")'"> Login </button>
    </div>
   
</div>
